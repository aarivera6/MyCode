import java.util.Scanner;

public class SalesDivisions
{
   public static void main(String[] args)
   {
   
      Scanner scan = new Scanner (System.in);
      System.out.println("Enter the total sales in dollars for the Noth Division:");
      double northSales = scan.nextDouble();
      
      System.out.println("Enter the total sales in dollars for the South Divison"); 
      double southSales = scan.nextDouble();
      
      double projectedNSales = northSales * 1.1;
      double projectedSSales = southSales * 1.1;
     
      
       System.out.printf("Projected sales for the North Division are $%,.2f." , projectedNSales);
       System.out.printf("Projected sales for the South Division are $%,.2f." , projectedSSales);
 
   }
 
}
